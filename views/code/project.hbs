<main id="project">
  <div class="container-fluid">
    <div class="project-blurb row">
      <div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-5 col-md-offset-2 col-md-4">
        <h1>{{ project.name }}</h1>
        <p class="project-item-header">{{ project.desc }}</p>
        <p class="spacer">{{ project.descLong }}</p>
      </div>
      <div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-4 col-md-offset-1 col-md-3">
        <div class="project-item-header">Technologies</div>
        <p class="project-tech">{{ project.tech }}</p>
        <div class="project-item-header">See it Live</div>
        <a class="project-host" href="{{ project.deployedUrl }}">
          <p>Deployed on {{ project.host }}</p>
        </a>
        <div class="project-item-header">GitHub Repo</div>
        <a class="project-source" href="{{ project.github }}">
          <p>Source</p>
        </a>
      </div>
    </div>

    <div class="project-details">
      
      {{> (lookup . 'partial') }}

      <div class="back-container detail">
        <a class="nav-link" href="/code">Back to Code</a>
      </div>
    </div>

  </div>
</main>

<main id="illo-project" class="project">
  <div class="container-fluid">
    <div class="project-blurb row text-center">
      <div class="col-xs-offset-1 col-xs-10">
        <h1>{{ project.name }}</h1>
        <p class="project-item-header spacer">{{ project.desc }}</p>
      </div>
    </div>

    <div class="project-details">

      <section class="detail">
        <div class="row">
          <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
            <div class="project-image-container">
              <img src="{{ project.cover}}">
            </div>
          </div>
        </div>
      </section>

      {{> (lookup . 'partial') }}

      <div class="row back-container detail">
        <a class="nav-link" href="/illo">Back to Illustration</a>
      </div>
    </div>

  </div>
</main>

<h1>My Portfolio</h1>

{{#each projects as |project|}}
  <div class="project">
    
    <div class="project-name">
      <a href="/projects/{{project.name}}">
         {{project.name}}
       </a>
    </div>

    <div class = "project-link">
      <a href = "{{project.repo}}">
      Github link
      </a>
    </div>  

    <div class="project-technologies">
      <ul>
      {{#each project.technologies as |technology|}}
        <li class="project-technology">
          {{technology}}
        </li>  
      {{/each}}
      </ul>
    </div>
  </div>
{{/each}}
<h1>{{project.name}}</h1>

<div class="container content">
    <div class="row project">
        <div class="col-md-6">
            <h3 class="project-name"><a href="/projects/{{project.name}}">{{project.name}}</a></h3>
            <p>
                {{#each project.tech as |tech|}}
                    <span class="project-tech">
                        {{tech}}
                    </span>
                {{/each}}
            </p>
            <a href="{{project.repo}}" target="_blank">Repository</a>
        </div>
        <div class="col-md-6">
            <img class="project-img" src={{project.img}} alt={{project.name}}>
        </div>
</div>

<a class="home-link" href="/">Go Back</a>